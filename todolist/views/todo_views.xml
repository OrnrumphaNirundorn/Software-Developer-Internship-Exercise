<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="todolist_view_list" model="ir.ui.view">
        <field name="name">todolist.view.list</field>
        <field name="model">todolist</field>
        <field name="arch" type="xml">
            <list string="Todo List">
                <field name="name"/>
                <field name="start_date_time"/>
                <field name="end_date_time"/>
                <field name="tags_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="todolist_view_form" model="ir.ui.view">
        <field name="name">todolist.view.form</field>
        <field name="model">todolist</field>
        <field name="arch" type="xml">
            <form string="Todo">
               
                <!-- HEADER: status + buttons -->
                <header>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,in_progress,done"/>

                    <button name="action_progress"
                            type="object"
                            string="Progress"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    
                </header>

                <!-- BODY -->
                <sheet>

                    <group>
                        <field name="name"/>
                    </group>

                    <group col="2">

                        <group>
                            <field name="tags_ids" widget="many2many_tags"/>
                        </group>

                        <group>
                            <field name="start_date_time"/>
                            <field name="end_date_time"/>
                        </group>

                    </group>

                </sheet>


                
            </form>
        </field>
    </record>


    

    <!-- Action -->
    <record id="action_todolist" model="ir.actions.act_window">
        <field name="name">Todo List</field>
        <field name="res_model">todolist</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ROOT MENU (ต้องมี action) -->
    <menuitem
        id="menu_todolist_root"
        name="Todo List"
        action="action_todolist"
        sequence="10"/>

</odoo>
