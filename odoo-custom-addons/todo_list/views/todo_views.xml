<odoo>

    <!-- LIST VIEW -->
    <record id="view_todo_task_list" model="ir.ui.view">
        <field name="name">todo.task.list</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_todo_task_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>

                <!-- HEADER -->
                <header>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,in_progress,done"/>

                    <button name="action_start"
                            type="object"
                            string="Start"
                            class="btn-primary"
                            modifiers='{"invisible": [["state", "!=", "draft"]]}'/>

                    <button name="action_done"
                            type="object"
                            string="Mark as Complete"
                            class="btn-success"
                            modifiers='{"invisible": [["state", "!=", "in_progress"]]}'/>
                </header>

                <!-- BODY -->
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">Todo Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_todo_root"
              name="Todo"
              action="action_todo_task"
              sequence="1"/>

</odoo>
